generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id_user   Int            @id @default(autoincrement())
  name      String
  email     String         @unique
  password  String
  createdAt DateTime?      @default(now())
  updatedAt DateTime?      @default(now())
  posts     Transictions[]

  @@map("users")
}

model Transictions {
  id_transaction Int      @id @default(autoincrement())
  user           Users    @relation(fields: [id_user], references: [id_user])
  id_user        Int
  type           String
  value          Decimal  @db.Decimal(10, 2)
  data           DateTime
  description    String?
  categorie      String?
  payment_method String?

  @@unique([id_transaction])
  @@map("transictions")
}
